---
import { getCollection } from 'astro:content';
import AuthorCard from 'src/components/AuthorCard.astro';
import { siteConfig } from 'src/config/site-config';
import MainLayout from 'src/layouts/MainLayout.astro';

const authors = await getCollection('author');
---

<MainLayout title="Listado de autores">
    <section class="container px-6 py-10 mx-auto flex justify-between">
        <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white">
            {siteConfig.title}
        </h1>
        <a href="/">Home</a>
    </section>

    <section class="grid grid-cols-1 sm:grid-cols-2 gap-2">
        <!-- AuthorCard -->
        {authors.map((author) => <AuthorCard author={author} />)}
    </section>
</MainLayout>

<style>
    a {
        @apply bg-blue-500 text-white p-2 rounded hover:bg-blue-600 cursor-pointer;
    }
</style>